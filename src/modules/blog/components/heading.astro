---
import { serializeDate } from '$core/services/serializeDate'

import type { CollectionEntry } from 'astro:content'

export interface Props {
  blog: CollectionEntry<'blog'>
  minutesRead: string
}

const { title, author, date, categories } = Astro.props.blog.data
---

<section>
  <h1 class="text-2xl sm:text-4xl text-gray-900">{title}</h1>
  <p class="text-gray-500 mt-2">
    Written by <span class="font-medium text-gray-600">{author}</span> on <span
      class="font-medium text-gray-600">{serializeDate(date)}</span
    > Â· <span class="font-medium text-gray-600">{Astro.props.minutesRead}</span>
  </p>
  <div class="flex flex-wrap space-x-2 pt-3 -mt-1">
    {
      categories.map(category => (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-blue-100 text-blue-800 my-1">
          {category}
        </span>
      ))
    }
  </div>
</section>
