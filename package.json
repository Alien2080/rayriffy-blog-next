    "@types/express": "^4.17.13",
    "@types/html-entities": "^1.3.4",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "encoding": "^0.1.13",
    "eslint": "^8.13.0",
    "eslint-config-next": "^12.1.5",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
