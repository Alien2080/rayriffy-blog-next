  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@builder.io/partytown": "^0.5.2",
    "@next/bundle-analyzer": "^12.1.5",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.1",
    "html-entities": "^2.3.3",
    "lodash": "^4.17.21",
    "next": "^12.1.5",
    "next-compose-plugins": "^2.2.1",
    "next-plugin-preact": "^3.0.6",
    "postcss": "^8.4.12",
    "preact": "^10.7.1",
    "preact-render-to-string": "^5.1.21",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-ssr-prepass": "npm:preact-ssr-prepass",
    "remark": "^14.0.1",
    "remark-html": "^14.0.0",
    "sitemap": "^7.1.1",
    "tailwindcss": "^3.0.24",
    "unified": "9.2.2",
